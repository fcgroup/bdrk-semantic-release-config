{
  "tagFormat": "${version}",
  "branches": [
    "master",
    "main",
    {
      "name": "dev",
      "prerelease": "alpha"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "config": "@bdrk/changelog-convention",
        "releaseRules": [{
          "type": "breaking",
          "release": "major"
        }, {
          "type": "major",
          "release": "major"
        }, {
          "type": "feat",
          "release": "minor"
        }, {
          "type": "feature",
          "release": "minor"
        }, {
          "type": "minor",
          "release": "minor"
        }, {
          "release": "patch"
        }]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "config": "@bdrk/changelog-convention",
        "issueUrlPrefix": "https://fritz-consulting.atlassian.net/browse/"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/exec",
      {
        "successCmd": "echo \"${nextRelease.version}\" > .semver"
      }
    ]
  ]
}
